#!/usr/bin/env bash

source "$(dirname "$0")/utils.sh"

list_all() {
  install_or_update_perl_install

  local list_arg
  if [ $ASDF_PERL_DEVEL ]; then
    list_arg="--list-all"
  else
    list_arg="--list"
  fi

  $(perl_install_bin) $arg \
    | if which tac >/dev/null; then
      tac
    else
      tail -r
    fi \
    | tr '\n' ' '
}

list_all
